{
    "name": "Wmbusmeters (W-MBus to MQTT)",
    "version": "0.2.27",
    "slug": "wmbusmeters",
    "description": "Acquire utility meter readings using the wireless mbus protocol (WMBUS)",
    "arch": ["armv7", "aarch64", "amd64"],
    "url": "https://github.com/BIBOLV/wmbusmeters",
    "init" : false,
    "startup": "application",
    "boot": "auto",
    "devices": ["/dev/ttyUSB0", "/dev/ttyAMA0"],
    "usb": true,
    "uart": true,
    "services": [
      "mqtt:need"
    ],
    "map": [
      "share:rw",
      "config:rw"
    ],
    "options": {
        "device": "auto:c1,t1",
        "shell": "/wmbusmeters/mosquitto_pub.sh wmbusmeters/$METER_NAME \"$METER_JSON\"",
        "donotprobe": "/dev/ttyAMA0",
        "loglevel": "normal",
        "logtelegrams": "false",
        "format": "json",
        "data_path": "/config/wmbusmeters",
        "enable_mqtt_discovery": "false",
        "logfile": "/dev/stdout",
        "meters": []
    },
    "schema": {
        "loglevel": "list(normal|verbose|debug)",
        "device": "str",
        "shell": "str",
        "data_path": "str?",
        "enable_mqtt_discovery": "bool?",
        "mqtt": {
          "host": "str?",
          "port": "port?",
          "user": "str?",
          "password": "str?"
        },
        "donotprobe": "str?",
        "logtelegrams": "list(false|true)",
        "format": "list(json|fields|hr)",
        "logfile": "str?",
        "meters": [ "str" ]
    }
}
